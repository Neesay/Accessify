{
    "manifest_version": 3,
    "name": "Accessify - Dyslexia-Friendly Reader",
    "version": "1.0",
    "description": "Enhances text readability for dyslexic users by adjusting fonts and spacing.",
    "permissions": ["scripting", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  